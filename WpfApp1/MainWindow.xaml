<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="500">
    <Grid>
        <StackPanel>
            <Label Content="Unit Type" HorizontalAlignment="Center" Margin="20" ></Label>
            <CheckBox Content="wardrobe" x:Name="wardrobeCheck" Click="wardrobeCheck_Click"></CheckBox>
            <CheckBox Content="only drawers" x:Name="onlyDrawersCheck" Click="onlyDrawersCheck_Click"></CheckBox>
            <CheckBox Content="drawerAndTallUnit" x:Name="drawerandTallCheck" Click="drawerandTallCheck_Click"></CheckBox>
        </StackPanel>
    </Grid>
</Window>
